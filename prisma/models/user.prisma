enum Role {
  ADMIN
  DOCTOR
  NURSE
  PATIENT
  GUEST // <-- now safe to use

}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum MembershipStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

model User {
  id           String              @id @default(uuid())
  name         String
  username     String              @unique
  email        String              @unique
  password     String
  status       UserStatus          @default(ACTIVE)    // Active/inactive users
  createdAt    DateTime            @default(now())
  hospitals    HospitalUser[]      // Join table (many-to-many)
}

model Hospital {
  id        String          @id @default(uuid())
  name      String
  address   String?
  hospitalNumber String     @unique
  hospitalImg String?
  createdAt DateTime        @default(now())
  users     HospitalUser[]  // Join table (many-to-many)
}

model HospitalUser {
  id          String           @id @default(uuid())
  user        User             @relation(fields: [userId], references: [id])
  userId      String
  hospital    Hospital         @relation(fields: [hospitalId], references: [id])
  hospitalId  String
  role        Role
  status      MembershipStatus @default(ACTIVE) 
  createdAt   DateTime         @default(now())

  @@index([userId])
  @@index([hospitalId])
  @@unique([userId, hospitalId]) 
}
